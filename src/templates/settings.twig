{% import "_includes/forms" as forms %}

{{ forms.textField({
    label: 'Embeds Copy Field Name',
    instructions: 'The name of the redactor copytext field',
    id: 'embedsCopyFieldName',
    name: 'embedsCopyFieldName',
    value: settings.embedsCopyFieldName,
    required: true
}) }}

{{ forms.textField({
    label: 'Embeds Field Name',
    instructions: 'The name of the embeds matrix field',
    id: 'embedsFieldName',
    name: 'embedsFieldName',
    value: settings.embedsFieldName,
    required: true
}) }}

{% set dateFormats = [{label: 'default', value: 'default'}] %}
{% for key, value in craft.app.formatter.dateTimeFormats %}
    {% set dateFormats = dateFormats|merge([{label: key, value: key}]) %}
{% endfor %}

{{ forms.selectField({
    label: 'Date Format',
    instructions: 'The format to use for date fields',
    id: 'dateFormat',
    name: 'dateFormat',
    options: dateFormats,
    value: settings.dateFormat,
    required: true
}) }}